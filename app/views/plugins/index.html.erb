<h1 class="page-header">Plugins</h1>

<div class="row">
  <div class="col-md-12"> 
    <div class="well well-sm pull-right">
      <%= @plugin_version %>
    </div>
  </div>
</div>

<% @output.group_by {|p| p[3][/^dokku core/]}.reverse_each do |group, plugins| %>
  <h4><%= group.present? ? "Dokku Core" : "Community (Yours)" %></h4>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <% unless group.present? %>
            <th></th>
          <% end %>
          <th>Name</th>
          <th>Version</th>
          <th>Status</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% plugins.each do |plugin| %>
          <tr>
            <% unless group.present? %>
              <td>
                <%= link_to fa_icon("lg toggle-#{plugin[2] == "enabled" ? "on" : "off"}"), toggle_status_plugin_path(plugin[0], plugin[2] == "enabled" ? "disable" : "enable"), remote: true, method: :patch, class: "toggle-plugin" unless plugin[3][/^dokku core/] %>

              </td>
            <% end %>
            <td><%= plugin[0] %></td>
            <td><%= plugin[1] %></td>
            <td><%= content_tag :span, plugin[2].humanize.upcase, class: "label label-#{ plugin[2] == "enabled" ? "success" : "danger" }" %></td>
            <td><%= plugin[3] %></td>
          </tr>
        <% end %>

        <% unless plugins.any? %>
          <tr>
            <td colspan="5"><em>You currently have no active plugins to display.</em></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <hr>
<% end %>
