<h1 class="page-header">Your apps</h1>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @output.each do |app| %>
        <tr>
          <td><%= app %></td>
          <td>
            <%= link_to fa_icon("remove"), app_path(app_name: app), class: "destroy-app btn btn-sm btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this app?" } %>
          </td>
        </tr>
      <% end %>

      <% unless @output.any? %>
        <tr>
          <td colspan="2"><em>You currently have no apps to display.</em></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
